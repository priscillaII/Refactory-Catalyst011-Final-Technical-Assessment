doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='author', content='Priscilla Akumu')
    link(rel='stylesheet', href='style.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title covid-test registration form
  body
    section
      .container
        img(src='./images/capture.PNG', style='height:10%', alt='...')
        .content.mt-2
          form.needs-validation.row.g-3(name='register', action='/register' method='POST')
            .form-group.col-md-6
              label Surname
              input.form-control.shadow-none(type='text', name='sname', placeholder='Enter your surname', required='')
            .form-group.col-md-6
              label Givenname
              input.form-control.shadow-none(type='text', name='gname', placeholder='Enter your givenname', required='')
            .form-group.col-md-6
              label Date of birth
              input.form-control.shadow-none(type='date', name='dob', placeholder='Enter your date of birth', required='')
            .form-group.col-md-6
              label Place of residence
              input.form-control.shadow-none(type='text', name='por', placeholder='Enter place of residence', required='')
            .form-group.col-md-6
              label Occupation
              input.form-control.shadow-none(type='text', name='occupation', placeholder='Enter occupation', required='')
            .form-group.col-md-6
              label Nationality
              input.form-control.shadow-none(type='text', name='nationality', placeholder='Enter your nationality', required='')
            .form-group.col-md-12
              label Gender
              select#gender.form-control.shadow-none(name='gender', required='')
                option(selected='', disabled='', value='') Choose gender
                option Male
                option Female
            .form-group.col-md-12
              label Category
              select#cat.form-control.shadow-none(name='cat', required='')
                option(selected='', disabled='', value='') ..Select Category..
                option Returnee
                option Contact
                option Alert
                option Volunteer
            .col-12
              button.btn.btn-primary(type='submit') Register

    script(src='validation.js')         